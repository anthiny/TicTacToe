<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp"/>
            <gradient
                android:startColor="@color/colorLightMelon"
                android:centerColor="@color/colorLightMelon"
                android:endColor="@color/colorLightMelon"/>
        </shape>
    </item>

    <item
        android:id="@android:id/progress"
        >
        <clip>
            <shape>
                <corners
                    android:radius="5dp" />
                <gradient
                    android:startColor="@color/colorMelon"
                    android:centerColor="@color/colorMelon"
                    android:endColor="@color/colorMelon"/>
            </shape>
        </clip>
    </item>
</layer-list>