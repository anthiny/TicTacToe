<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">
    <RelativeLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:id="@+id/center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_dialog_center"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/spinnerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/center"
            android:layout_toStartOf="@+id/center"
            android:textSize="15sp"
            android:text="@string/setting_dialog_spinnerTitle"
            />
        <Spinner
            android:id="@+id/limitTimeTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/center"
            android:layout_toEndOf="@+id/center"
            android:layout_marginTop="-4dp"
            android:entries="@array/time_table"
            />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/first"
        android:layout_marginTop="20dp"
        >

        <RadioButton
            android:id="@+id/optionFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/setting_dialog_first"
            />

        <RadioButton
            android:id="@+id/optionSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_dialog_second"
            />

    </RadioGroup>

    <Button
        android:id="@+id/startButton"
        android:background="@drawable/rounded_button"
        android:layout_below="@+id/choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/setting_dialog_startButton"
        android:layout_marginBottom="30dp"
        />

</RelativeLayout>
