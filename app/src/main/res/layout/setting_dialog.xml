<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/spinnerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/setting_dialog_spinnerTitle"
        />
    <Spinner
        android:id="@+id/limitTimeTable"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@id/spinnerText"
        android:layout_toRightOf="@id/spinnerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/time_table"
        />

    <RadioGroup
        android:id="@+id/choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/spinnerText"
        android:layout_marginTop="10dp"
        >

        <RadioButton
            android:id="@+id/optionFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/setting_dialog_first"
            />

        <RadioButton
            android:id="@+id/optionSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_dialog_second"
            />

    </RadioGroup>

    <Button
        android:id="@+id/startButton"
        android:background="@drawable/rounded_button"
        android:layout_below="@+id/choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/setting_dialog_startButton"
        android:layout_marginBottom="10dp"
        />

</RelativeLayout>
